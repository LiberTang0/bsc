<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="bsc_tree_contact">
      <field name="name">BSC Contact</field>
      <field name="model">bsc.bsc</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>
    
    <record model="ir.ui.view" id="bsc_form_contact">
      <field name="name">BSC Contact</field>
      <field name="model">bsc.bsc</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="bsc_action_contact">
      <field name="name">BSC</field>
      <field name="res_model">bsc.bsc</field>
      <field name="view_mode">tree,form</field>
    </record>
    

    <!-- server action to the one above -->
    <!--
    <record model="ir.actions.server" id="bsc.action_server">
      <field name="name">bsc server</field>
      <field name="model_id" ref="model_bsc_bsc"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    -->

    <!-- Top menu item -->
    
    <menuitem name="BSC" id="bsc_menu_root"/>
    
    <!-- menu categories -->
    
    <menuitem name="Contacts" id="bsc_menu_contact" parent="bsc_menu_root" action="bsc_action_contact"/>
    
    <!-- actions -->
    
  </data>
</odoo>