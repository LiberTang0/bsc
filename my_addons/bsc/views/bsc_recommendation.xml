<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="bsc_tree_recommendation">
            <field name="name">BSC Recommendation</field>
            <field name="model">bsc.recommendation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="text"/>
                    <field name="posted_by"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="bsc_form_recommendation">
            <field name="name">BSC Recommendation</field>
            <field name="model">bsc.recommendation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="recommendation_objective_ids"/>
                                <field name="recommendation_measure_ids"/>
                                <field name="recommendation_initiative_ids"/>
                            </group>
                        </group>
                        <group>
                            <field name="posted_by"/>
                            <field name="text"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="bsc_form_recommendation_objective">
            <field name="name">BSC Recommendation</field>
            <field name="model">bsc.recommendation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="recommendation_objective_ids"/>
                            </group>
                        </group>
                        <group>
                            <field name="posted_by"/>
                            <field name="text"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="bsc_form_recommendation_measure">
            <field name="name">BSC Recommendation</field>
            <field name="model">bsc.recommendation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="recommendation_measure_ids"/>
                            </group>
                        </group>
                        <group>
                            <field name="posted_by"/>
                            <field name="text"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="bsc_form_recommendation_initiative">
            <field name="name">BSC Recommendation</field>
            <field name="model">bsc.recommendation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="recommendation_initiative_ids"/>
                            </group>
                        </group>
                        <group>
                            <field name="posted_by"/>
                            <field name="text"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_bsc_recommendation_filter" model="ir.ui.view">
            <field name="name">bsc.recommendation.filter</field>
            <field name="model">bsc.recommendation</field>
            <field name="arch" type="xml">
                <search string="Search BSC recommendation">
                    <field name="recommendation_objective_ids"/>
                    <field name="recommendation_measure_ids"/>
                    <field name="recommendation_initiative_ids"/>
                    <group expand="0" string="Group By">
                        <separator/> -->
                        <filter name="group_objective" string="Objective" context="{'group_by':'recommendation_objective_ids'}"/>
                        <filter name="group_measure" string="Measure" context="{'group_by':'recommendation_measure_ids'}"/>
                        <filter name="group_initiative" string="Initiative" context="{'group_by':'recommendation_initiative_ids'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_bsc_recommendation" model="ir.actions.act_window">
            <field name="name">BSC Recommendation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bsc.recommendation</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_bsc_recommendation_filter"/>
        </record>
        <menuitem id="menu_bsc_recommendation"
                name="Recommendation" 
                parent="bsc_menu_root" 
                sequence="3" 
                action="action_bsc_recommendation"/>
    </data>
</odoo>