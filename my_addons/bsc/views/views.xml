        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form</field>
        <!-- <field name="view_id" eval="view_holiday_status_normal_tree"/> -->
        <!-- <field name="search_view_id" ref="view_bsc_objective_filter"/> -->
    </record>
    

